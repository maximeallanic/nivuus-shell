# ZSH Ultra Performance Config - Development Configuration
# This file contains configuration for development and testing

# Repository Information
REPO_NAME="zsh-ultra-performance"
REPO_URL="https://github.com/maximeallanic/shell.git"
VERSION="1.0.0"

# Installation Paths
INSTALL_DIR="$HOME/.config/zsh-ultra"
BACKUP_DIR="$HOME/.config/zsh-ultra-backup"
CONFIG_DIR="config"

# Required System Packages
REQUIRED_PACKAGES=(
    "zsh"
    "git"
    "curl"
    "wget"
)

# Optional Modern CLI Tools
OPTIONAL_PACKAGES=(
    "eza"           # Modern ls replacement
    "bat"           # Better cat with syntax highlighting
    "fd-find"       # Modern find replacement
    "ripgrep"       # Fast grep replacement
    "gh"            # GitHub CLI
)

# ZSH Plugins
ZSH_PLUGINS=(
    "zsh-syntax-highlighting"
    "zsh-autosuggestions"
)

# Performance Targets
TARGET_STARTUP_TIME=300  # milliseconds
MAX_FILE_SIZE=200        # lines per module

# Testing Configuration
TEST_SHELLS=(
    "zsh"
    "bash"  # For shellcheck compatibility
)

# Supported Systems
SUPPORTED_DISTROS=(
    "debian"
    "ubuntu"
    "mint"
    "kali"
)

# File Structure
MODULE_FILES=(
    "01-performance.zsh"
    "02-history.zsh"
    "03-completion.zsh"
    "04-keybindings.zsh"
    "05-prompt.zsh"
    "06-aliases.zsh"
    "07-functions.zsh"
    "08-ai-integration.zsh"
    "09-syntax-highlighting.zsh"
    "10-environment.zsh"
    "11-maintenance.zsh"
    "12-diagnostics.zsh"
)

# Development Tools
DEV_TOOLS=(
    "shellcheck"    # Shell script linter
    "shfmt"         # Shell script formatter
    "yamllint"      # YAML linter
)

# GitHub Actions
GITHUB_WORKFLOWS=(
    "test.yml"
    "lint.yml"
    "release.yml"
)
